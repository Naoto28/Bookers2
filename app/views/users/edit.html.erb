<body>
<div class="container">
<h2>User info</h2>

<%= form_for(@user) do |f| %>

<div class="field">
      <%= f.label :Name %>
      <%= f.text_field :name %>
</div>

<div class="field">
      <%= f.label :Image %>
</div>

<div class="field">
  <%= f.attachment_field :image %>
</div>

<div class="field">
      <%= f.label :Introduction %>
      <%= f.text_area :introduction %>
</div>

<div class="actions">
  <input type="submit" name="commit" value="Update User">
</div>

<% end %>

</div>

<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>
