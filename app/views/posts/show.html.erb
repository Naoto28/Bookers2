
<body>
<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <h2>User info</h2>

    <% if current_user.image_id == nil %>
    <%= image_tag 'no_image.jpg' %>
    <% else %>
    <%= attachment_image_tag current_user, :image, :fill, 100, 100 %>
    <% end %>


    <table class="table">
      <tbody>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>

    <div class="row">
    <%= link_to '',edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

    <h2>New book</h2>

    <%= form_for(@postf) do |f| %>

    <div class="field row">
      <%= f.label :Title %>
      <%= f.text_field :title, class: "form-control col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.label :Opinion %>
      <%= f.text_area :opinion, class: "form-control col-xs-1" %>
    </div>

    <div class="action row" >
    <%= f.submit value: "Create Book", class: "btn btn-primary col-xs-12" %>
    </div>

    <% end %>

    </div>
  <div class="col-xs-9">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user) do %>
            <%= image_tag 'no_image.jpg', size: '40x40' %><br>
          <% end %>
          <%= link_to @post.user.name, user_path(@user)%>
        </td>
        <td>
          <%= link_to @post.title, post_path(@user) %>
        </td>
        <td>
          <%= @post.opinion %>
        </td>
        <% if current_user ==  @post.user %>
        <td><%= link_to "Edit", edit_post_path(@post.id), class: "btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", post_path(@post), class: "btn-sm btn-danger", method: :delete, data: {confirm: "本当に消しますか？"} %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
  </div>
</div>
<footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
</body>








